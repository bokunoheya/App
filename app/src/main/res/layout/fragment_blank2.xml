<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myapplication12312.BlankFragment2">

    <Button
        android:id="@+id/programmist"
        android:layout_width="196dp"
        android:layout_height="120dp"
        android:src="@drawable/punkt2"
        android:text="@string/programmist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/povar"
        android:layout_width="213dp"
        android:layout_height="120dp"
        android:src="@drawable/punkt2"
        android:text="@string/povar"
        app:layout_constraintEnd_toStartOf="@+id/programmist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
